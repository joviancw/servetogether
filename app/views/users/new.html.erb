<%= form_for :user, url: users_path do |f| %>
      <p>
          <%= f.label :name %><br>
              <%= f.text_field :name %>
                </p>
                  <p>
                      <%= f.label :email %><br>
                          <%= f.text_area :email %>
                            </p>
                            <p>
                            c++
                            <%= check_box_tag 'skills[]', 1 %><br>
                            python
                            <%= check_box_tag 'skills[]', 2 %><br>
                            </p>
                              <p>
                                  <%= f.submit %>
                                    </p>
                                <% end %>
